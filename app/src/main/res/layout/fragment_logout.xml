<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/logOutFrame"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/logout_bg"
    tools:context=".fragments.LogoutFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_logoutuser"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello User"
        android:id="@+id/txtUserName"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:textColor="@color/white"
        android:textSize="18pt" />

    <androidx.cardview.widget.CardView
        android:id="@+id/termsCardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#fafafa"
        android:layout_marginTop="350dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_terms_24"
            android:layout_gravity="start|center"
            android:layout_marginLeft="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:layout_gravity="start|center"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginLeft="70dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_forward_24"
            android:layout_gravity="end|center"
            android:layout_marginRight="12dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/policyCardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#fafafa"
        android:layout_marginTop="420dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_policy_24"
            android:layout_gravity="start|center"
            android:layout_marginLeft="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:layout_gravity="start|center"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginLeft="70dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_forward_24"
            android:layout_gravity="end|center"
            android:layout_marginRight="12dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/feedbackCardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#fafafa"
        android:layout_marginTop="490dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_feedback_24"
            android:layout_gravity="start|center"
            android:layout_marginStart="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:layout_gravity="start|center"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginLeft="70dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_forward_24"
            android:layout_gravity="end|center"
            android:layout_marginEnd="12dp" />

    </androidx.cardview.widget.CardView>



    <Button
        android:layout_width="200dp"
        android:id="@+id/btnLogout"
        android:layout_height="40dp"
        android:background="@drawable/custom_button"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="580dp"
        android:text="LogOut"
        android:textSize="18dp"
        android:textStyle="bold"/>

    </FrameLayout>